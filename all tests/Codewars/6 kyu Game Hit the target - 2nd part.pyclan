решение === (мтрц) {
	для и1 в от 0 до мтрц[0].длина() - 1 {
		для и2 в от 0 до мтрц.длина() - 1 {
			если мтрц[и1][и2] == "x" {
				ху = и1;
				хх = и2;
			}
			иначели ["^", ">", "v", "<"].имеет(мтрц[и1][и2]) {
				стрелка = мтрц[и1][и2];
				су = и1;
				сх = и2;
			}
		}
	}
	Ё
	хх + " " + ху;
	сх + " " + су;
	стрелка;
	Ё
	если стрелка == "^" {
		если хх != сх:
			воздать ложь;
		если ху паче су:
			воздать ложь;
		воздать истину;
	}
	если стрелка == "v" {
		если хх != сх:
			воздать ложь;
		если ху меньше су:
			воздать ложь;
		воздать истину;
	}
	если стрелка == ">" {
		если ху != су:
			воздать ложь;
		если хх меньше сх:
			воздать ложь;
		воздать истину;
	}
	если стрелка == "<" {
		если ху != су:
			воздать ложь;
		если хх паче сх:
			воздать ложь;
		воздать истину;
	}
}

решение([

  [' ', 'x', ' ', ' '],

  [' ', ' ', ' ', ' '],

  [' ', '^', ' ', ' '],

  [' ', ' ', ' ', ' ']

]) == истина;

решение([

  [' ', ' ', ' ', ' '],

  [' ', 'v', ' ', ' '],

  [' ', ' ', ' ', 'x'],

  [' ', ' ', ' ', ' ']

]) == ложь;

решение([

  [' ', ' ', ' ', ' '],

  ['>', ' ', ' ', 'x'],

  [' ', '', ' ', ' '],

  [' ', ' ', ' ', ' ']

] ) == истина;

решение([
      [' ', 'x'],
      [' ', '^']
]) == истина;

решение([
      ['^', ' '],
      [' ', 'x']
    ]) == ложь;
	
решение([
      ['>', ' '],
      [' ', 'x']
    ]) == ложь;
	
решение([
      [' ', ' ', ' ', ' ', ' '],
      [' ', ' ', ' ', ' ', ' '],
      [' ', ' ', ' ', ' ', 'v'],
      [' ', ' ', ' ', ' ', 'x'],
      [' ', ' ', ' ', ' ', ' ']
    ]) == истина;